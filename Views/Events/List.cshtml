@model List<WebApplication1.Models.EventEntity.Event>


@{
    ViewData["Title"] = "Events List";
}

<h1 class="mb-4">Events</h1>

<a asp-action="Add" class="btn btn-success mb-3">➕ Add Event</a>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Title</th>
            <th>Location</th>
            <th>Start</th>
            <th>End</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ev in Model)
        {
            <tr>
                <td>@ev.Title</td>
                <td>@ev.Location</td>
                <td>@ev.StartDate.ToString("g")</td>
                <td>@ev.EndDate?.ToString("g")</td>
                <td>@ev.Category</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@ev.Id" class="btn btn-primary btn-sm">Edit</a>
                    <form asp-action="Delete" asp-route-id="@ev.Id" method="post" style="display:inline;"
                          onsubmit="return confirm('Delete this event?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Calendar" class="btn btn-outline-primary">📅 View Calendar</a>
