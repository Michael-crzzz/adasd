@model List<WebApplication1.Models.Entities.BStudent>
@{
    ViewData["Title"] = "Student List";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">Students</h2>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary rounded-pill">
            <i class="bi bi-arrow-left-circle"></i> Back
        </a>
    </div>

    <div class="card shadow-lg rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h3 class="mb-0">Student List</h3>
            <a asp-controller="BStudents" asp-action="Add" class="btn btn-light btn-sm rounded-pill">
                + Add Student
            </a>
        </div>
        <div class="card-body">
            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-warning text-center rounded-3 shadow-sm">
                    No students found.
                </div>
            }
            else
            {
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Course</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model)
                        {
                            <tr>
                                <td>@student.Id</td>
                                <td>@student.Name</td>
                                <td>@student.Email</td>
                                <td>@student.Course</td>
                                <td class="text-center">
                                    <a class="btn btn-sm btn-warning rounded-pill me-2"
                                       asp-controller="BStudents" asp-action="Edit" asp-route-id="@student.Id">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>

                                    <form asp-controller="BStudents" asp-action="Delete"
                                          asp-route-id="@student.Id"
                                          method="post"
                                          style="display:inline;"
                                          onsubmit="return confirm('Are you sure you want to delete this student?');">
                                        <button type="submit" class="btn btn-sm btn-danger rounded-pill">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
